.player-container{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  filter:blur(40rpx);
  opacity:0.5;
  z-index: -1;
}

.player-mask{
  position: absolute;
  top:0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: -2;
  background-color: #222;
}

.player_info{
  text-align: center;
  position: absolute;
  top:0;
  bottom: 0;
  left: 0;
  right: 0;
}

.player-disc{
  width: 592rpx;
  height: 592rpx;
  background: url('https://pic-ldd-test.oss-cn-hangzhou.aliyuncs.com/md/20210129175524.png') no-repeat center/contain;
  position: absolute;
  left: 50%;
  transform: translate(-50%,140rpx);
}

.player-disc::after{
  content: '';
  width: 192rpx;
  height: 274rpx;
  position: absolute; 
  top: -165rpx;
  left: 266rpx;
  background: url('https://pic-ldd-test.oss-cn-hangzhou.aliyuncs.com/md/20210131133553.png') no-repeat center/contain;
  transform:rotate(-15deg);
  transform-origin: 24rpx 10rpx;
  transition: transform 0.8s ease;
}

.playing.player-disc::after{
  transform: rotate(0deg);
}

.player-img{
  width: 368rpx;
  height: 368rpx;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top:50%;
  margin-top: -184rpx;
  margin-left: -184rpx;
}

.zhuan{
  animation: disc 12s linear infinite;
}
@keyframes disc{
  from{
    transform: rotate(0deg);
  }
  to{
    transform: rotate(360deg);
  }
}

.ting{
  animation-play-state: paused;
}

.control{
  position: absolute;
  bottom:8%;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
}

.control .iconfont{
  color: #fefefe;
}

.icon-hanhan-01-01, .icon-hanhan-01-011{
  font-size: 80rpx;
}

.icon-bofang, .icon-zanting{
  font-size: 120rpx;
  margin: 0 50rpx;
}

.progressControl{
  position: absolute;
  left: 30rpx;
  bottom: 250rpx;
  width: 690rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  color: #fff;
  
}

.barControl{
  position: relative;
  width: 500rpx;
  height: 5rpx;
  background: rgba(0, 0, 0, 0.4);
  margin: auto;
}

.audio-currentTime-Bar{
  position: absolute;
  top: 0;
  left: 0;
  /* width: 100rpx; */
  z-index: 1;
  height: 4rpx;
  background: red;
}

.audio-circle{
  position: absolute;
  right: -12rpx;
  top: -4rpx;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #fff;
}