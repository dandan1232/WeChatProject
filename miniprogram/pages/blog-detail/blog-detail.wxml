<!-- 自定义导航 -->
<navigation title='详情'></navigation>
<scroll-view scroll-y class="container" style="top:{{statusBarHeight+44}}px;">
  <!-- 顶部博客卡片 -->
  <view class="blog-card">
    <x-blog-card blog="{{blog}}"></x-blog-card>
  </view>
  <view class="tab">发表评论</view>
  <!-- 评论内容列表 -->
  <view class="comment-list"></view>
  <!-- 遍历博客的评论数组 -->
  <block wx:for="{{commentList}}" wx:key="_id">
    <view class="comment">
      <!-- 评论人头像和昵称 -->
      <view class="comment-title">
        <image class="comment-avatar" src="{{item.avatarUrl}}" />
        <text class="comment-nickname">{{item.nickName}}</text>
      </view>
      <!-- 评论内容 -->
      <view class="comment-content">{{item.content}}</view>
      <!-- 评论时间 -->
      <view class="comment-time">{{item.creatTime}}</view>
    </view>
  </block>
</scroll-view>
<!-- 底部操作条 -->
<view class="blog-ctrl">
  <x-blog-ctrl blogId="{{blog._id}}" bind:refreshCommentList="_getBlogDetail" />
</view>