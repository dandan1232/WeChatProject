/* 顶部歌单信息容器，使用高斯模糊加上透明度 */
.detail-container{
  margin-top: 80rpx;
  height: 320rpx;
  filter: blur(40rpx);
  opacity: 0.4;
}

/* 顶部歌单信息遮罩层，高度和背景图一致，z轴方向处于背景图下方，形成一种毛玻璃效果 */
.detail-mask{
  margin-top: 150rpx;
  position: absolute;
  width: 100%;
  height: 320rpx;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1;
  border-radius: 0rpx 0rpx 50% 50% / 0rpx 0rpx 10rpx 10rpx !important;
}

/* 详情信息容器，flex布局，绝对定位在吸顶位置，垂直方向（次轴）居中，水平方向（主轴）左对齐 */
.detail-info{
  margin-top: 150rpx;
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 320rpx;
  padding: 20rpx;
  box-sizing: border-box;
  align-items: center;
}

/* 左边的图片 */
.detail-img{
  width:280rpx;
  height:280rpx;
  margin-right:24rpx;
  border-radius:6rpx;
}

/* 右边的文字 */
.detail-name{
  color: #ffffff;
  font-size: 36rpx;
  line-height: 1.5;
  font-weight: 400;
}

page{
  background: #e1eec3;  /* fallback for old browsers */      background: -webkit-linear-gradient(to right, rgb(225, 238, 195), rgb(240, 80, 83));  /* Chrome 10-25, Safari 5.1-6 */      background: linear-gradient(to right, rgb(225, 238, 195), rgb(240, 80, 83)); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */         
}



.iconfont{
  text-align: center;
  color: blue;
}

.operation{
  display: flex;
  position: absolute;
  top:400rpx;
  left: 60%;
  transform: translateX(-50%);
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 50rpx;
  align-items: center;
}

.operation view{
  display: flex;
  align-items: center;
  margin: 0 20rpx 0 20rpx;
  width: 150rpx;
}
