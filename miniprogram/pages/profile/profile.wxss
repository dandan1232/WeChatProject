page{
  background: #e1eec3;  /* fallback for old browsers */      background: -webkit-linear-gradient(to right, rgb(225, 238, 195), rgb(240, 80, 83));  /* Chrome 10-25, Safari 5.1-6 */      background: linear-gradient(to right, rgb(225, 238, 195), rgb(240, 80, 83)); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */         
}
.user{
  margin-top: 100rpx;
  width: 100%;
  height: 400rpx;
  overflow: hidden;
}

.user-image{
  width: 200rpx;
  height: 200rpx;
  margin: 0rpx auto;
  margin-top: 50rpx;
}

.user-image image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.nickname{
  margin-top: 10rpx;
  text-align: center;
  color: blue;
  font-size: 40rpx;
}


.playlist-container{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  flex-wrap: wrap;
  margin-top: 10rpx;
}