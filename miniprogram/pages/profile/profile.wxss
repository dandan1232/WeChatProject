page {
  background-color: #EDEDED;
}

.profile-header {
  background-image: url("https://pic-ldd-test.oss-cn-hangzhou.aliyuncs.com/md/20210210142832.jpeg");
  background-size: cover;
  height: 480rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  color: #dfddd9;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  display: block;
  overflow: hidden;
  border: 6rpx solid #ccc;
  border-radius: 50%;
  margin-top: 20rpx;
}

.nickname {
  font-size: 32rpx;
  margin-top: 20rpx;
}

.nav {
  overflow: hidden;
  margin: 20rpx;
  box-sizing: border-box;
}

.nav-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx;
  min-height: 100rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #ccc;
}

.content {
  font-size: 32rpx;
  line-height: 1.6em;
  flex: 1;
  display: flex;
  justify-content: space-between;
}

.text {
  color: #4B4B4B;
}

.iconfont icon-xiangyou {
  font-size: 32rpx;
  color: 32rpx;
}
