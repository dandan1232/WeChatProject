<s-navbar class="searchContainer">
  <!-- <view slot="content"> 
  </view> -->
  <view class="header">
    <text class="iconfont icon-fenlei fenleiIcon"></text>
    <view class="searchInput">
      <text class="iconfont icon-sousuo searchIcon"></text>
<input type="text" placeholder="搜索歌曲"  placeholder-class="placeholder"/>
  </view>
  </view>
</s-navbar>
  
<swiper indicator-dots="true" indicator-active-color="#d43c33" autoplay="true" interval="3000" duration="1000"
  class="swiper">
  <swiper-item wx:for="{{imgUrls}}">
    <image src="{{item.url}}" class="img" mode="scaleToFill"></image>
  </swiper-item>
</swiper>

<text class="title">场景歌单</text>
<view class="playlist-container">
  <block wx:for="{{playlist}}" wx:key="_id">
    <x-playlist playlist="{{item}}"></x-playlist>
  </block>
</view>


