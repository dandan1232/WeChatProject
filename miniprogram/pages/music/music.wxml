<s-navbar>
  <view slot="content" style="diaplay:flex;flex-direction:colum;align-items:center;opacity:{{navOpacity}}"> 
<block wx:if="{{isTop}}">
      <text class="iconfont icon-sousuo" style="padding:10rpx"></text>
     <input type="text" placeholder="      搜索歌曲" class="searchBar"/>
</block>
<block wx:else>
<text>音乐</text>
</block>
  </view>
</s-navbar>
  
<swiper indicator-dots="true" indicator-active-color="#d43c33" autoplay="true" interval="3000" duration="1000"
  class="swiper">
  <swiper-item wx:for="{{imgUrls}}">
    <image src="{{item.url}}" class="img" mode="scaleToFill"></image>
  </swiper-item>
</swiper>

<text class="title">场景歌单</text>
<view class="playlist-container">
  <block wx:for="{{playlist}}" wx:key="_id">
    <x-playlist playlist="{{item}}"></x-playlist>
  </block>
</view>


