/* components/songlist/songlist.wxss */
.songlist-container {
  height: 100rpx;
  position: relative;
  padding-bottom: 20rpx;
}
.songlist-id {
  font-size: 30rpx;
  color: blue;
  text-shadow: 1px 0 0 rgba(0, 0, 0, 0.15);
  position: absolute;
  right:10rpx;
  top: 4rpx;
  padding-left: 26rpx;
  background:url(data:image/png;base64,) no-repeat   8rpx/20rpx 40rpx;
}

.songlist-name {
  font-size:30rpx;
  color: teal;
  line-height: 1.2;
  padding: 4rpx 0 0 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.songlist-from {
  font-size:26rpx;
  line-height: 1.2;
  padding: 4rpx 0 0 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}